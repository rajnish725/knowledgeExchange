<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:elevation="@dimen/_13sdp"
    android:minHeight="@dimen/_30sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/greyDark"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_9sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <CheckBox
            android:id="@+id/checkbox"
            style="@style/font_header_bold"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/txt_serial"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:gravity="start"
            android:text="01"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/txt_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_toEndOf="@+id/txt_serial"
            android:layout_toRightOf="@+id/txt_serial"
            android:lineSpacingMultiplier="1.2  "
            android:paddingEnd="@dimen/_4sdp"
            android:text="@string/default_web_client_id"
            android:textColor="@color/white"
            style="@style/font_roboto_medium"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>