<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyTheme.Base" />

    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="colorAccent">@color/greyDark</item>
        <item name="colorControlNormal">@color/grey</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/black</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/greyDark</item>
        <item name="actionModeBackground">@android:color/holo_orange_light</item>
        <!--Avoid multi touch on screen at a same time-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <!--&lt;!&ndash;Avoid black screen when using FLAG_ACTIVITY_CLEAR_TASK & FLAG_ACTIVITY_NEW_TASK&ndash;&gt;-->
        <!--<item name="android:windowDisablePreview">true</item>-->

        <!--transition effect for open new activity-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:windowBackground">@color/screen_background</item>
    </style>

    <style name="AuthTheme" parent="AppTheme">
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:progressBackgroundTint">@color/greyLight2</item>
    </style>

    <style name="font_roboto_medium" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="font_roboto_bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="font_header_bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
    </style>

    <style name="font_playfair_regular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/playfair_display_regular</item>
    </style>

    <style name="AlertTextAppearanceStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        ... // Additional customizations
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white2</item>
        <item name="colorControlActivated">#DAA520</item>
    </style>
</resources>
